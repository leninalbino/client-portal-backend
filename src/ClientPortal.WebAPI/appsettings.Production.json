{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "ClientPortal": "Information"
    },
    "Console": {
      "IncludeScopes": false,
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_URL}"
  },
  "FileUpload": {
    "BasePath": "/app/uploads/",
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg", ".png" ]
  },
  "CORS": {
    "AllowedOrigins": [
      "${FRONTEND_URL}",
      "${RENDER_EXTERNAL_URL}",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Swagger": {
    "Enabled": true,
    "Title": "ClientPortal API - Production",
    "Version": "v1",
    "Description": "Client Portal Web API deployed on Render"
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": "31536000",
    "HttpsPort": 443
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      }
    }
  }
}