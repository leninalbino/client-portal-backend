{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ClientPortalDb_Staging;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "FileUpload": {
    "BasePath": "uploads/",
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg" ]
  },
  "CORS": {
    "AllowedOrigins": [
      "https://yourstagingdomain.com",
      "https://www.yourstagingdomain.com"
    ]
  },
  "Swagger": {
    "Enabled": true,
    "Title": "ClientPortal API - Staging",
    "Version": "v1"
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": "31536000"
  }
}